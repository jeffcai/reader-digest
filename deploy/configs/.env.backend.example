# Production Environment Configuration for Backend
# Copy this file to .env in the backend directory

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=False
SECRET_KEY=your_secret_key_here_change_this_in_production
JWT_SECRET_KEY=your_jwt_secret_key_here_change_this_in_production

# Database Configuration
DATABASE_URL=sqlite:////app/data/reader_digest.db

# Application Configuration
API_BASE_URL=https://your-domain.com
CORS_ORIGINS=https://your-domain.com,http://localhost:3000

# Security Configuration
BCRYPT_LOG_ROUNDS=12
JWT_ACCESS_TOKEN_EXPIRES=86400

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/app/logs/backend.log

# Optional: External Services
# Add configurations for any external services you might use in the future
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

# Rate Limiting (if using Flask-Limiter)
RATELIMIT_STORAGE_URL=memory://

# File Upload Configuration
MAX_CONTENT_LENGTH=16777216  # 16MB
UPLOAD_FOLDER=/app/data/uploads
